{
  "name": "hetzner_one",
  "override_attributes": {
    "build_essential": {
      "compiletime": true
    },
    "squid": {
      "port": "localhost:3128",
      "ipaddress": "localhost"
    },
    "rbenv": {
      "rubies": [ "2.1.0" ]
    },
    "nginx": {
      "version": "1.5.10",
      "install_method": "source",
      "passenger": {
        "rbenv_version": "2.1.0",
        "version": "4.0.37"
      },
      "source": {
        "modules": [
          "nginx::http_stub_status_module",
          "nginx::http_ssl_module",
          "nginx::http_gzip_static_module",
          "nginx::passenger"
        ]
      }
    }
  },
  "run_list": [
    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[mysql::server]",
    "recipe[squid]",
    "recipe[ruby_build]",
    "recipe[rbenv::system]",
    "recipe[nginx]",
    "recipe[nginx::passenger]",
    "recipe[hetzner_one]",
    "recipe[badgeworld]"
  ]
}
